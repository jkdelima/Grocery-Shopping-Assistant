<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andrew.cpsc481.Main2Activity">

    <Button
        android:text="Search"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:textSize="10dp"
        android:id="@+id/button8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/search"
        android:gravity="right|bottom"/>

    <Button
        android:text="Store Select"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:id="@+id/button9"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button8"
        android:background="@drawable/store"
        android:gravity="top|center"/>

    <Button
        android:text="Map"
        android:background="@drawable/map"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:id="@+id/button10"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button21"
        android:layout_toStartOf="@+id/button21" />

    <Button
        android:text="Shopping Cart"
        android:background="@drawable/cart"
        android:textSize="9dp"
        android:textStyle="bold"
        android:gravity="top|left"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:id="@+id/button21"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Add to Cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:background="@android:color/holo_orange_light" />

    <TextView
        android:text="Aisle 2 - Lay's - Classic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chipsText1"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textAlignment="viewStart"
        android:fontFamily="sans-serif" />

    <TextView
        android:text="Aisle 2 - Doritos - Cool Ranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/chipsText3"
        android:layout_below="@+id/chipsText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:text="Add to Cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:elevation="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignBaseline="@+id/chipsText2"
        android:layout_alignBottom="@+id/chipsText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_orange_light" />

    <TextView
        android:text="Aisle 2 - Pringle's - Sour Cream &amp; Onion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/chipsText2"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add to Cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:elevation="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:background="@android:color/holo_orange_light"
        android:layout_alignBaseline="@+id/chipsText3"
        android:layout_alignBottom="@+id/chipsText3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
