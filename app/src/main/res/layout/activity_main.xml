<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.andrew.cpsc481.MainActivity"
    >

    <Button
        android:text="Search"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:textSize="10dp"
        android:id="@+id/button8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/search"
        android:gravity="right|bottom"/>

    <Button
        android:text="Store Select"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:id="@+id/button9"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button8"
        android:background="@drawable/store"
        android:gravity="top|center"/>

    <Button
        android:text="Map"
        android:background="@drawable/map"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:id="@+id/button10"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button21"
        android:layout_toStartOf="@+id/button21" />

    <Button
        android:text="Shopping Cart"
        android:background="@drawable/cart"
        android:textSize="9dp"
        android:textStyle="bold"
        android:gravity="top|left"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:id="@+id/button21"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <GridLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        tools:context="com.example.andrew.cpsc481.MainActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/edtSearch"
            android:hint="Search..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/lstSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </ListView>

        <Button
            android:text="Fruits"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_below="@+id/edtSearch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/fruits"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/fruits"
            android:layout_height="65dp" />

        <Button
            android:text="Vegetables"
            android:textStyle="bold"
            android:textSize="40sp"
            android:background="@drawable/veggies"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/fruits"
            android:id="@+id/veggies"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Meats"
            android:layout_margin="2dp"
            android:background="@drawable/meat"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/meat"
            android:layout_below="@+id/veggies"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Dairy"
            android:layout_margin="2dp"
            android:background="@drawable/dairy"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/dairy"
            android:layout_below="@+id/meat"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Snacks"
            android:layout_margin="2dp"
            android:background="@drawable/snacks"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/snacks"
            android:layout_below="@+id/dairy"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Beverages"
            android:layout_margin="2dp"
            android:background="@drawable/beverages"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/beverages"
            android:layout_below="@+id/snacks"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </GridLayout>

</RelativeLayout>